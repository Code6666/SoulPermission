<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_height="match_parent"
        tools:ignore="HardcodedText"
        tools:context=".MainActivity">

    <TextView
            android:text="compare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:textAllCaps="false"
            android:onClick="before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before"/>

    <Button
            android:textAllCaps="false"
            android:onClick="after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="After"/>

    <TextView
            android:text="Api_Guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:textAllCaps="false"
            android:onClick="apiGuideActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="in Activity"/>
    <Button
            android:textAllCaps="false"
            android:onClick="apiGuideAppComponentActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="in FragmentActivity(AppComponentActivity)"/>

    <Button
            android:textAllCaps="false"
            android:onClick="fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="in Fragment"/>

    <Button
            android:textAllCaps="false"
            android:onClick="supportFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="in SupportFragment"/>

    <TextView
            android:text="common usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:textAllCaps="false"
            android:onClick="fragmentWithViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="used in ViewPagerFragment"/>

</LinearLayout>